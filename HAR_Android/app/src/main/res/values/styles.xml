<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="heading1">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:layout_marginStart">@dimen/dimen_16</item>
        <item name="android:layout_marginEnd">@dimen/dimen_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading2">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/dimen_16</item>
        <item name="android:paddingTop">@dimen/dimen_16</item>
        <item name="android:paddingEnd">@dimen/dimen_8</item>
    </style>

    <style name="info">
        <item name="android:textSize">@dimen/size_12</item>
    </style>

</resources>
